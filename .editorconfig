root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[/.git/**]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
indent_size = unset

[*.{diff,patch}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
